    "version": "0.2.0",
    "configurations": [
        {
            "name": "DetKDecomp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/detkdecomp",
            "args": ["2","${workspaceFolder}/bin/input.hg"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}